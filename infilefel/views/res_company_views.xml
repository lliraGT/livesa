<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="infilefel_view_company_form" model="ir.ui.view">
            <field name="name">infilefel.res.company.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                    <notebook position="inside">
                        <page string="FEEL">
                            <group>
                                <field name="fel_usuario"/>
                                <field name="fel_llave_firma"/>
                                <field name="fel_llave_pre_firma"/>
                                <field name="fel_codigo_exportador"/>
                                <field name="fel_numero_abonos_fc"/>
                                <field name="fel_monto_factura_fc"/>
                                <field name="fel_fecha_vencimiento_fc"/>
                                <field name="unidad_medida"/>
                                <field name="adenda_extra"/>
                            </group>
                            <group string="Frases">
                                <group>
                                    <field name="fel_logo"/>
                                    <field name="fel_texto_logo"/>
                                </group>
                            </group>

                        </page>
                    </notebook>
            </field>
        </record>

    </data>
</odoo>
