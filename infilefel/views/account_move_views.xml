<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

      <record id="infilefel_view_move_form" model="ir.ui.view">
          <field name="name">infilefel.account.move.form</field>
          <field name="model">account.move</field>
          <field name="inherit_id" ref="account.view_move_form"/>
          <field name="arch" type="xml">
              <group id="header_right_group" position="inside">
                  <field name="fel_serie" readonly="state in ('posted','cancel')"/>
                  <field name="fel_numero" readonly="state in ('posted','cancel')"/>
                  <field name="fel_numero_autorizacion" readonly="state in ('posted','cancel')"/>
                  <field name="fel_documento_certificado" readonly="state in ('posted','cancel')" widget ="url"/>
              </group>
              <field name="invoice_user_id" position="after">
                  <field name="tipo_factura"/>
                  <field name="fel_numero_abonos_fc"/>
                  <field name="fel_fecha_vencimiento_fc"/>
                  <field name="fel_monto_abonos_fc"/>
                  <field name="fel_no_enviar_tel"/>
              </field>
          </field>
      </record>

      <record id="digifactfel_view_out_invoice_tree" model="ir.ui.view">
          <field name="name">digifactfel.account.out.invoice.tree</field>
          <field name="model">account.move</field>
          <field name="inherit_id" ref="account.view_out_invoice_tree"/>
          <field name="arch" type="xml">
              <field name="invoice_date" position="after">
                  <field name="fel_serie"/>
                  <field name="fel_numero"/>
                  <field name="fel_numero_autorizacion"/>
              </field>
          </field>
      </record>

    </data>
</odoo>
