<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="product_template_only_extra_form_view" model="ir.ui.view">
      <field name="name">product.template.only.extra.form.inherit</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_only_form_view"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='type']" position="after">
            <field name="es_activo" string="Es un activo?"/>
        </xpath>
      </field>
  </record>


  <record model="ir.ui.view" id="product_form_view_extra">
      <field name="name">product.product.form.extrar</field>
      <field name="model">product.product</field>
      <field name="inherit_id" ref="product.product_normal_form_view"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='type']" position="after">
            <field name="es_activo" string="Es un activo?"/>
        </xpath>
      </field>
  </record>



</odoo>
