<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="account_gt_libro_ventas_form_view">
            <field name="name">account_gt.libro_ventas.wizard</field>
            <field name="model">account_gt.libro_ventas.wizard</field>
            <field name="arch" type="xml">
                <form string="Libro de ventas">
                    <group>
                        <field name="fecha_inicio"/>
                        <field name="fecha_fin"/>
                        <field name="diarios_ids" widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="name" invisible="1"/>
                        <field name="archivo" readonly="1" filename="name"/>
                    </group>
                    <footer>
                        <!-- <button name="print_report" type="object" string="Generar" class="oe_highlight"/> -->
                        <button name="print_report_excel" string="Reporte excel" type="object" class="oe_highlight"/>
                        or
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="launch_account_gt_libro_ventas" model="ir.actions.act_window">
            <field name="name">Libro de ventas</field>
            <field name="res_model">account_gt.libro_ventas.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account_gt_libro_ventas_form_view"/>
            <field name="target">new</field>
            <field name="binding_model_id" ref="account.model_account_account"/>
        </record>

        <menuitem action="launch_account_gt_libro_ventas" id="menu_reporte_libro_ventas" parent="account_gt.menu_reporte_libros_gt"/>

    </data>
</odoo>
