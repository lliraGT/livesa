<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <data>
    <record model="ir.ui.view" id="account_gt_libro_diario_form_view">
        <field name="name">account_gt.libro_diario.wizard</field>
        <field name="model">account_gt.libro_diario.wizard</field>
        <field name="arch" type="xml">
            <form string="Libro Diario">
                <group>
                    <field name="fecha_inicio"/>
                    <field name="fecha_fin"/>
                    <field name="movimientos_destino" widget="radio"/>
                    <field name="consolidado"/>
                    <field name="diario_ids" widget="many2many_tags"/>
                </group>
                <group>
                    <field name="name" invisible="1"/>
                    <field name="archivo" readonly="1" filename="name"/>
                </group>
                <footer>
                    <!-- <button name="print_report" type="object" string="Generar" class="oe_highlight"/> -->
                    <button name="print_report_excel" string="Reporte excel" type="object" class="oe_highlight"/>
                    or
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

        <record id="launch_account_gt_libro_diario" model="ir.actions.act_window">
            <field name="name">Libro diario</field>
            <field name="res_model">account_gt.libro_diario.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account_gt_libro_diario_form_view"/>
            <field name="target">new</field>
            <field name="binding_model_id" ref="account.model_account_account"/>
        </record>

        <menuitem action="launch_account_gt_libro_diario" id="menu_reporte_libro_diario" parent="account_gt.menu_reporte_libros_gt" sequence="10"/>


  </data>

</odoo>
