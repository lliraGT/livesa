<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="account_gt_libro_bancos_form_view">
            <field name="name">account_gt.libro_bancos.wizard</field>
            <field name="model">account_gt.libro_bancos.wizard</field>
            <field name="arch" type="xml">
                <form string="Libro de bancos">
                    <group>
                        <field name="fecha_inicio"/>
                        <field name="fecha_fin"/>
                        <field name="cuenta_id"/>
                    </group>
                    <footer>
                        <button name="print_report" type="object" string="Generar" class="oe_highlight"/>
                        or
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="launch_account_gt_libro_bancos" model="ir.actions.act_window">
            <field name="name">Libro de bancos</field>
            <field name="res_model">account_gt.libro_bancos.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account_gt_libro_compras_form_view"/>
            <field name="target">new</field>
            <field name="binding_model_id" ref="account.model_account_account"/>
        </record>

        <menuitem action="launch_account_gt_libro_bancos" id="menu_reporte_libro_bancos" parent="account.menu_finance_reports"/>

    </data>
</odoo>
